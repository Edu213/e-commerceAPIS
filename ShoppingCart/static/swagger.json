{
  "swagger": "2.0",
  "info": {
    "title": "Cart Service API",
    "description": "API for managing user shopping carts",
    "version": "1.0"
  },
  "paths": {
    "/api/cart/{user_id}": {
      "get": {
        "summary": "Retrieve user cart",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "description": "ID of the user whose cart to retrieve",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/Cart"
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/api/cart/product/{user_id}": {
      "post": {
        "summary": "Add product to user cart",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "description": "ID of the user whose cart to update",
            "required": true,
            "type": "integer"
          },
          {
            "name": "product",
            "in": "body",
            "description": "Product details to add to the cart",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Product"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Product added successfully",
            "schema": {
              "$ref": "#/definitions/Success"
            }
          },
          "400": {
            "description": "Bad request - Invalid data provided",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/api/cart/total/{user_id}": {
      "get": {
        "summary": "Calculate total price of user cart",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "description": "ID of the user whose cart total price to calculate",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "object",
              "properties": {
                "total_price": {
                  "type": "number",
                  "format": "double"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/healthcheck": {
      "get": {
        "summary": "Health check endpoint",
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/Success"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Cart": {
      "type": "object",
      "properties": {
        "user_id": {
          "type": "integer"
        },
        "products": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Product"
          }
        }
      }
    },
    "Product": {
      "type": "object",
      "properties": {
        "product_id": {
          "type": "integer",
          "example": 1
        },
        "name": {
          "type": "string",
          "example": "Playstation 5"
        },
        "description": {
          "type": "string",
          "example": "Video game console"
        },
        "price": {
          "type": "number",
          "format": "double",
          "example": 8599.99
        },
        "category": {
          "type": "string",
          "example": "Videogames"
        },
        "brand": {
          "type": "string",
          "example": "Sony"
        }
      }
    },
    "Error": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string"
        }
      }
    },
    "Success": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      }
    }
  }
}
